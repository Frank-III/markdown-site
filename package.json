{
  "name": "markdown-site",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev:convex": "convex dev",
    "build": "vite build",
    "preview": "vite preview",
    "start": "bun run build/index.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "oxlint --deny-warnings",
    "lint:fix": "oxlint --fix",
    "sync": "bun scripts/sync-posts.ts",
    "sync:prod": "SYNC_ENV=production bun scripts/sync-posts.ts",
    "deploy": "bun run sync && bun run build",
    "deploy:prod": "bunx convex deploy && bun run sync:prod"
  },
  "dependencies": {
    "convex": "^1.17.4",
    "convex-svelte": "^0.0.12",
    "date-fns": "^3.3.1",
    "gray-matter": "^4.0.3",
    "lucide-svelte": "^0.468.0",
    "marked": "^15.0.4",
    "marked-gfm-heading-id": "^4.1.1",
    "marked-highlight": "^2.2.1",
    "highlight.js": "^11.10.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.9",
    "@sveltejs/kit": "^2.10.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.2",
    "dotenv": "^16.4.5",
    "oxlint": "^0.15.0",
    "svelte": "^5.14.1",
    "svelte-check": "^4.1.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
